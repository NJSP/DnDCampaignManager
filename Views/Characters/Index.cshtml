@model IEnumerable<Character>  
@{  
   int campaignId = ViewBag.CampaignId ?? 0;  
}  
 
<h1>Characters</h1>  
 
<form asp-action="Create" method="post">  
   <input name="Name" placeholder="Name" required />  
   <select name="Type">  
       <option value="PC">Player Character</option>  
       <option value="NPC">Non-Player Character</option>  
   </select>  
   <select name="CampaignId" required>  
       <option value="">Select Campaign</option>  
       @foreach (var campaign in ViewBag.Campaigns)  
       {  
           <option value="@campaign.Value">@campaign.Text</option>  
       }  
   </select>  
   <button type="submit">Add Character</button>  
</form>  
 
<ul>  
   @foreach (var character in Model)  
   {  
       <li>@character.Name (@character.Type)</li>  
   }  
</ul>